CC:=gcc $(CFLAGS)
SRC:=main.c holberton.c
# OBJ:=main.o holberton.o
OBJ:=$(SRC:.c=.o)
# OBJ:=$(patsubst %.c,%.o,$(SRC))
NAME:=holberton
RM:=rm -f
CFLAGS:=-Wall -Werror -Wextra -pedantic
all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ holberton
oclean:
	$(RM) main.o holberton.o
fclean:
	$(RM) *~ holberton
	$(RM) main.o holberton.o
re:oclean all                              
